{
  "name": "nearm-swaps-posthog",
  "version": "1.0.0",
  "description": "NEAR swaps analytics with PostHog integration - monorepo",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd packages/api && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "cd packages/api && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "start": "cd packages/frontend && npm run start",
    "start:prod": "NODE_ENV=production cd packages/frontend && node server.js",
    "metrics": "cd packages/api && npm run run",
    "check-data": "cd packages/api && npm run check-data",
    "lint": "cd packages/frontend && npm run lint",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "docker:build": "docker build -t nearm-swaps-posthog:latest .",
    "docker:run": "docker run -p 3001:3001 --env-file packages/api/.env.production nearm-swaps-posthog:latest",
    "prod:setup": "npm ci --only=production && npm run build",
    "security:audit": "npm audit && npm audit --workspace=api && npm audit --workspace=frontend",
    "vercel:prepare": "./scripts/prepare-vercel.sh",
    "vercel:deploy": "vercel --prod"
  },
  "workspaces": [
    "packages/api",
    "packages/frontend"
  ],
  "dependencies": {
    "axios": "^1.7.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8",
    "decimal.js": "^10.4.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "@vercel/node": "^3.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "@types/node": "^20.12.12",
    "tsx": "^4.16.2",
    "typescript": "^5.8.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Peersyst/nearm-swaps-posthog.git"
  },
  "license": "MIT",
  "author": "Peersyst",
  "keywords": [
    "near",
    "swaps",
    "posthog",
    "analytics",
    "defi",
    "blockchain"
  ]
}
