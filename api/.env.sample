# PostHog Configuration
# Get these from your PostHog project settings
POSTHOG_BASE_URL=https://app.posthog.com
POSTHOG_PROJECT_ID=your_project_id_here
POSTHOG_API_KEY=phc_your_api_key_here

# Swap Event Configuration
SWAP_EVENT_NAME=swap
NETWORK_FILTER=mainnet

# Volume Calculation Settings
# Which side of the swap to value for volume calculations
# Options: "in" or "out"
VOLUME_SIDE=in
VOLUME_PROP_IN=amount_in
VOLUME_PROP_OUT=amount_out

# Account Filtering (optional)
# Comma-separated patterns or specific account IDs to exclude
EXCLUDE_ACCOUNT_ID_PATTERNS=
EXCLUDE_ACCOUNT_IDS=

# Internal Prices API (optional)
# URL for internal price data source
PRICES_API_URL=

# Query Configuration
# Number of events to fetch per batch (recommended: 500-1000)
BATCH_SIZE=500

# Maximum events to process (0 = no limit)
# Set to a smaller number for testing (e.g., 10000)
MAX_EVENTS=0

# CoinGecko API Configuration (optional)
# Used as fallback for price data when internal APIs fail
# Get free API key from https://www.coingecko.com/en/api
COINGECKO_API_KEY=your_coingecko_api_key_here

# Development Configuration
NODE_ENV=development

# Logging and Debug
DEBUG=false
